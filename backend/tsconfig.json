  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
  },
  // "include": ["./src/**/*", "./api-tests/**/*"],
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}