generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Candidate {
  id            String  @id @default(cuid())
  email         String  @unique
  firstname     String?
  lastname      String?
  passwordHash  String?
  verifiedEmail Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id      String @id @default(cuid())
  key     String @unique
  data    Json
}
