generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi", "postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis]
}

enum JobStatus {
  open
  closed
}

enum Remote {
  yes
  hybrid
  no
}

enum Education {
  bachelor
  master
  doctoral
}

enum Discipline {
  strategyAndConsulting
  sustainability
  operationsAndProjectManagement
  researchAndDevelopment
  businessDevelopmentAndSales
  policy
  engineering
  marketingAndCommunications
  administrativeAndSupport
  financialAndLegal
  softwareEngineering
  humanResourcesAndPeopleManagement
  maintenanceAndTechnicians
}

enum CompanySize {
  xxs // 1-10
  xs // 11-50
  s // 51-200
  m // 201-500
  l // 501-1000
  xl // 1001-5000
  xxl // 5001-infinity
}

enum CdrCategory {
  biomass
  ecosystemServices
  soil
  mineralization
  directAirCapture
  algae
  utilization
  mCdr
  forest
}

enum ContractTime {
  fullTime
  partTime
}

enum ContractNature {
  employee
  volunteer
  contractor
  internship
  paidFellowship
}

model User {
  id                  String  @id @default(cuid())
  email               String  @unique
  firstname           String
  lastname            String
  passwordHash        String
  verifiedEmail       Boolean @default(false)
  forgotPasswordToken String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id   String @id @default(cuid())
  key  String @unique
  data Json
}

model Location {
  id             String                                 @id @default(cuid())
  coordinates    Unsupported("geography(Point, 4326)")?
  city           String?
  country        CountryCode
  countryCityKey String                                 @unique
  jobs           Job[]
  companies      Company[]
}

model Job {
  id                  String        @id @default(cuid())
  airTableId          String        @unique
  title               String
  sourceUrl           String
  discipline          Discipline
  status              JobStatus
  description         String
  locations           Location[]
  remote              Remote
  currency            CurrencyCode?
  minSalary           Int?
  maxSalary           Int?
  minYearOfExperience Int?
  minEducation        Education?
  publishedAt         DateTime?
  foundAt             DateTime
  lastCheckedAt       DateTime
  company             Company       @relation(fields: [companyId], references: [id])
  companyId           String
  contractNature      ContractNature
  contractTime        ContractTime
}

model Company {
  id            String      @id @default(cuid())
  airTableId    String      @unique
  name          String
  companyUrl    String
  careerPageUrl String
  hqLocation    Location    @relation(fields: [hqLocationId], references: [id])
  hqLocationId  String
  companySize   CompanySize
  cdrCategory   CdrCategory
  jobs          Job[]
}

