{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "SEE LICENSE IN LICENSE.txt",
  "type": "commonjs",
  "prisma": {
    "schema": "src/db/schema.prisma"
  },
  "scripts": {
    "build": "rm -rf ./dist && yarn gen-graphql-types && yarn prisma:generate && npx tsc && yarn copy-files",
    "start": "node dist/src/index.js",
    "dev": "yarn gen-graphql-types && nodemon src/index.ts",
    "copy-files": "copyfiles -u 1 src/**/*.graphql dist/src",
    "prisma:generate": "npx --yes prisma generate",
    "prisma:migrate": "npx --yes prisma migrate dev",
    "prisma:reset": "npx --yes prisma migrate reset --force",
    "test:unit": "jest --config jest.unit.config.ts",
    "test:api": "dotenv -e .env.test -- yarn prisma:reset && NODE_ENV=test jest --config jest.api.config.ts --detectOpenHandles",
    "ci:test:api": "yarn prisma:reset && jest --config jest.api.config.ts --detectOpenHandles",
    "gen-graphql-types": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@apollo/server": "4.12.2",
    "@apollo/server-plugin-landing-page-graphql-playground": "4.0.1",
    "@as-integrations/koa": "1.1.1",
    "@getbrevo/brevo": "^2.5.0",
    "@graphql-tools/load-files": "7.0.1",
    "@koa/cors": "5.0.0",
    "@koa/router": "13.1.1",
    "@mapbox/search-js-core": "1.3.0",
    "@prisma/client": "6.11.1",
    "@types/jsonwebtoken": "9.0.6",
    "@types/koa2-ratelimit": "0.9.6",
    "@types/papaparse": "5.3.16",
    "bcrypt": "6.0.0",
    "date-fns": "4.1.0",
    "dotenv": "16.5.0",
    "graphql": "16.11.0",
    "graphql-rate-limit-directive": "2.0.6",
    "jsonwebtoken": "9.0.2",
    "knex": "3.1.0",
    "koa": "2.16.1",
    "koa-bodyparser": "4.4.1",
    "koa-helmet": "7.0.2",
    "koa-mount": "4.2.0",
    "koa-static": "5.0.0",
    "koa2-ratelimit": "1.1.3",
    "lodash": "4.17.21",
    "p-map": "4.0.0",
    "papaparse": "5.5.3",
    "prisma-extension-cuid2": "1.1.1",
    "rate-limiter-flexible": "5",
    "rimraf": "^6.0.1",
    "typescript": "5.6.2",
    "zod": "3.25.74"
  },
  "devDependencies": {
    "@eslint/js": "9.31.0",
    "@graphql-codegen/cli": "5.0.7",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typescript": "4.1.6",
    "@graphql-codegen/typescript-resolvers": "4.5.1",
    "@types/bcrypt": "5.0.2",
    "@types/jest": "30.0.0",
    "@types/koa": "2.15.0",
    "@types/koa-bodyparser": "4.3.12",
    "@types/koa-mount": "4.0.5",
    "@types/koa-static": "4.0.4",
    "@types/koa__cors": "5.0.0",
    "@types/koa__router": "12.0.4",
    "@types/lodash": "4.17.17",
    "@types/node": "24.1.0",
    "copyfiles": "2.4.1",
    "eslint": "9.x",
    "globals": "16.3.0",
    "jest": "30.0.4",
    "nodemon": "3.1.10",
    "ts-jest": "29.4.0",
    "ts-node": "10.9.2",
    "typescript-eslint": "8.2.0"
  },
  "peerDependencies": {
    "@paralleldrive/cuid2": "2.2.2"
  }
}
